<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gurug.education">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".Application"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_white"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:allowBackup">
        <activity
            android:name=".view.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoStatusBar_white">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.QrScanActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_white" />
        <activity
            android:name=".view.activity.HomeScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_white" />
        <activity
            android:name=".view.activity.HelpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_white" />
        <activity
            android:name=".view.activity.SelectBoardMediumActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_white" />
        <activity
            android:name=".view.activity.SelectFrameWorkDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_white" />
        <activity
            android:name=".view.activity.SelectSubjectClassActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_white" />
        <activity
            android:name=".view.activity.LessonPlanQuickViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_white" />
        <activity
            android:name=".view.activity.LessonPlanDetailViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_white" />
        <activity
            android:name=".view.activity.TopicSelectionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_white" />
        <activity
            android:name=".view.activity.ProfileEditActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_white" />
        <activity android:name=".view.activity.SelectClassActivity" />

        <provider
            android:name=".provider.UserProvider"
            android:authorities="@string/authority_profiles"
            android:exported="true" />
        <provider
            android:name=".provider.TelemetryProvider"
            android:authorities="@string/authority_telemetry"
            android:exported="true" />
        <provider
            android:name=".provider.PartnerProvider"
            android:authorities="@string/authority_partner"
            android:exported="true" />
        <provider
            android:name=".provider.GenieContentProvider"
            android:authorities="@string/authority_content"
            android:exported="true" />
        <provider
            android:name=".provider.SummarizerProvider"
            android:authorities="@string/authority_summarizer"
            android:exported="true" />

        <activity
            android:name=".view.activity.SelectFrameWorkActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_white" />
        <activity
            android:name=".view.activity.TeachingMethodDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_white" />
    </application>

</manifest>