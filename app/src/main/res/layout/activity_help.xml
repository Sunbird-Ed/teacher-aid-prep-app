<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gurug.education.view.activity.HelpActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_help"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tl_help">

    </android.support.v4.view.ViewPager>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:layout_above="@+id/tv_skip"
        android:layout_centerInParent="true"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingEnd="@dimen/dp_20"
        app:tabPaddingStart="@dimen/dp_20" />

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:fontFamily="@font/roboto_regular"
        android:paddingStart="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_10"
        android:text="@string/text_skip"
        android:textAllCaps="true"
        android:textColor="@color/colorGrey1"
        android:textSize="@dimen/_14sp" />
</RelativeLayout>
