<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_100"
    android:layout_height="@dimen/dp_100"
    android:layout_marginStart="@dimen/dp_5"
    android:layout_marginEnd="@dimen/dp_5"
    android:background="@drawable/bg_grey_card_round"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_resource_type">

        <ImageView
            android:id="@+id/iv_resource_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_resource_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:fontFamily="@font/noto_sans_bold"
            android:gravity="center"
            android:text="TC_003"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_14sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_resource_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:padding="@dimen/dp_5">

        <TextView
            android:id="@+id/tv_resource_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans_regular"
            android:gravity="center"
            android:maxLines="1"
            android:text="Resource"
            android:textColor="@color/colorGrey2"
            android:textSize="@dimen/_8sp" />

        <TextView
            android:id="@+id/tv_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_8"
            android:background="@drawable/bg_grey_card_round_border_blue"
            android:gravity="center"
            android:paddingStart="@dimen/dp_8"
            android:paddingTop="@dimen/dp_2"
            android:paddingEnd="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_2"
            android:text="@string/text_open"
            android:textAllCaps="true"
            android:textColor="@color/colorBlue1"
            android:textSize="@dimen/_10sp" />

    </RelativeLayout>


</RelativeLayout>

